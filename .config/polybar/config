;**********************************************************

[module/i3]
type = internal/i3
;ws-icon-[0-9]+ = label;icon
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
;ws-icon-default = 

strip-wsnumbers = true

label-focused = "%name%"
label-focused-foreground = ${colors.fg}
;label-focused-background = ${colors.magenta}
label-focused-padding = 0

label-unfocused = 
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.blue}
label-unfocused-background = ${colors.bg-alt}

label-urgent = "%name%"
label-urgent-foreground = ${colors.red}
;label-urgent-background = ${colors.white}
label-urgent-padding = 1

label-visible = 
label-visible-foreground = ${colors.blue}
label-visible-background = ${colors.bg-alt}
label-visible-padding = 1

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.magenta}
label = "%percentage_used% "


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 100

label-discharging = "%percentage%% "
;format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-full = " full "
format-full-prefix = 
format-full-prefix-foreground = ${colors.magenta}

format-charging-prefix = 
format-charging-prefix-foreground = ${colors.magenta}

ramp-capacity-0 = 
ramp-capacity-1 =  
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.magenta}

label-charging = "Charging %percentage%% "
label-charging-foreground = ${colors.fg}

;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-foreground = ${colors.magenta}
;animation-charging-framerate = 750

[module/menu]
type = custom/text

content = "  "
content-foreground = ${colors.magenta}
;content-background = ${colors.magenta}
click-left = ~/.config/popups/todo/todo

[module/date]
type = internal/date
interval = 5

date =
date-alt = "%a %d %b %Y"

time = %H:%M
time-alt = %H:%M

label = "%date% %time%"

[module/uptime]
type = custom/script
interval = 1200
format = "<label> "
format-prefix = " "
format-prefix-foreground = ${colors.magenta}
exec = ~/.config/polybar/uptime

[module/mpd]
type = custom/script
interval = 2
format = "<label>"
format-prefix = " "
format-prefix-foreground = ${colors.magenta}
exec = ~/.config/polybar/mpd

[module/power-label]
type = custom/text
content = "  "

content-foreground = ${colors.magenta}
;content-background = ${colors.magenta-alt}
click-left = bash ~/.config/popups/power/power

[module/xbacklight]
type = internal/xbacklight
enable-scroll = true

format = <ramp><label> 

; format label (if <label> is present)
label            = " %percentage%% "
label-background = ${colors.bg}

; format ramp (if <ramp> is present)
ramp-0 =  
ramp-foreground = ${colors.magenta}
ramp-background = ${colors.bg}

[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume> 
