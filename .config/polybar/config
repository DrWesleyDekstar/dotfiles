label-muted-background = ${colors.bg} 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.magenta}
ramp-volume-background = ${colors.bg}
[module/sepa]
