;**********************************************************
;
;                       GLOBAL WM SETTINGS
;
;**********************************************************
[global/wm]
margin-top = 5
margin-bottom = 5

;*********************************************************
;
;                       BAR SETTINGS
;
;********************************************************
[settings]
screenchange-reload = true
compositing-background = over
compositing-border     = over

[bar/top]
monitor   = ${env:MONITOR:LVDS1}
width     = 1280px
height    = 28
offset-x  = 10
offset-y  = 10
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 5
border-bottom-color = ${colors.bg}
border-top-size = 5
border-top-color = ${colors.bg}

spacing = 0
padding-left = 1
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Iosevka Slab:pixelsize=10;3
;font-1 = Wuncon Siji:pixelsize=8;2
font-1 = Material Icons:antialia=false:size=12;5

tray-position = right
tray-padding = 0
tray-scale       = 1.0
tray-background = #101010

modules-left = bspwm
modules-center = date
modules-right = xbacklight volume memory battery

dim-value = 1.0


;**********************************************************
;
;                   MODULES SETTINGS
